<p id="notice"><%= notice %></p>

<% content_for :page_title, @package.name %>
<% content_for :page_description, @package.description %>

<div class="min-h-screen bg-gray-100">

  <%= render partial: 'layouts/show_navbar' %>

  <div class="pt-10 pb-5">

    <%= render partial: 'show_header' %>

    <main>

      <div class="max-w-7xl mx-auto sm:px-6 lg:px-8">

        <%= render partial: 'show_stats' %>

        <% unless @package.readme.is_empty %>
          <%= render partial: 'show_readme' %>
        <% end %>

        <% unless @package.depending.empty? && @package.dependents.empty? %>
          <%= render partial: 'show_dependencies' %>
        <% end %>

      </div>

    </main>

  </div>

</div>
